<div class="navbar navbar-expand-sm navbar-light navbar-lewagon p-0" style="height: 60px; box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);">
  <%= image_tag "lylogo.png", style: 'height: 100%; padding: 0; margin: 0;' %>
  <button class="navbar-toggler mr-3 " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <li class="nav-item m-3 pl-3 pr-3 <%= 'active' if request.path == '/' %> " style="background-color: white;">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <!--  -->

        <%= current_user ? link_to(current_user.email, '#', class: "nav-item dropdown-toggle m-3", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) : link_to('Log in', new_user_session_path, class: 'btn btn-outline-dark m-3', style: "background-color: white;") %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
