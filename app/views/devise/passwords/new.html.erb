<div class="main_container">
  <div class="container login-card col-3 py-4 px-4">
    <h3 class="align-text">Forgot your password?</h3>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <br>
        <br>
        <div class="form-actions btn-width">
          <%= f.button :submit, "Send me reset instructions",class:"create-btn button-center" %>
        </div>
        <% end %>
      </div>

    <br>
    <br>
    <br>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
