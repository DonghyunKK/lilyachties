<h1 class="text-center mt-3">Enquires for <%= @yacht.title %></h1>
<% if @bookings.any? %>
  <div class="container d-flex mt-2">
    <% @bookings.each do |booking| %>
      <div class="card text-center" style="width: 400px">
        <div class="card-body">
          <h3 class="card-title">Enquiry for <%= booking.yacht.title %></h3>
          <h6 class="card-title">Enquiry from: <%= booking.user.email %></h6>
          <h6 class="card-subtitle mb-2 mt-2 text-muted">Start Date: <%= booking.start_date.strftime('%A %d %b %Y') %></h6>
          <h6 class="card-subtitle mb-2 mt-2 text-muted">End Date: <%= booking.end_date.strftime('%A %d %b %Y') %></h6>
          <% if booking.accepted == true %>
            <h4><span class="badge badge-success my-2">Booking Confirmed!</span></h4>
          <% else %>
            <h4><span class="badge badge-warning my-2">Booking awating confirmation.</span></h4>
          <% end %>
          <p class="mt-2"><%= link_to "Accept", accept_booking_path(booking), class: 'btn create-btn' %>
          <%= link_to "Decline", decline_booking_path(booking), class: 'btn create-btn' %></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h3 class="text-center mt-5">There are currently no bookings for <%= @yacht.title %></h3>
<% end %>
<h3 class="text-center mt-3"><%= link_to 'Back to Dashboard', dashboard_path, class: 'btn create-btn' %></h3>

