<h1 class="text-center">Choose your Lil' Yacht</h1>
<div class="container ">
  <%= form_tag yachts_path, method: :get, class: "center-form" do %>
    <%= text_field_tag :query, params[:query], class: "form-control search", placeholder:"Search e.g. Name, Description or Price" %> 
  <% end %>
  <div class="content">
    <div class="left-side">
      <div class="row">
        <div class="col-8">
          <div class="index-cards">
            <% @yachts.each do |yacht| %>
              <%= render 'shared/yacht_card', yacht: yacht, margin: 20 %>
            <% end %>
          </div>
          <%= link_to "Back", root_path, class: "create-btn" %>
        </div>
      </div>
    </div>
    <div class="right-side">
      <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
    </div>
  </div>
</div>


