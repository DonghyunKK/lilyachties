<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for @yacht do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :weekly_price %>
        <%= f.input :length %>
        <%= f.input :beam %>
      </div>
      <div class="col-6">
        <%= f.input :build %>
        <%= f.input :cruising_speed %>
        <%= f.input :coordinates %>
        <%= f.input :number_of_guests %>
        <%= f.input :number_of_crew %>
        <%= f.input :number_of_cabins %>
      </div>
      <%= f.submit %>
    <% end %>
    <%= link_to "Back", yachts_path %>
  </div>
</div>