<h1 class="text-center">Choose your Lil' Yacht</h1>
<div class="container">
  <%= form_tag yachts_path, method: :get, class: "center-form" do %>
    <%= text_field_tag :query, params[:query], class: "form-control search", placeholder:"Search e.g. Name, Description or Price" %>
  <% end %>
  <div>
    <div class="row">
      <div class="col-8" style="width: 75vw">
        <div class="index-cards">
          <% @yachts.each do |yacht| %>
            <%= render 'shared/yacht_card', yacht: yacht, margin: 30 %>
          <% end %>
        </div>
      </div>
      <div class="col-4" style="width: 25vw">
        <div id="map"
         style="width: 100%; height: 300px; margin-top: 20px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>


