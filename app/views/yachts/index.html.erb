<h1 class="text-center">Choose your Lil' Yacht</h1>
<div class="container">
  <h2 class="text-left">Search Available Yachts</h2>
  <div class="content">
    <div class="left-side">
      <div class="row">
        <div class="col-8">
          <ul class="list-group">
            <% @yachts.each do |yacht| %>
              <%= render 'shared/yacht_card', yacht: yacht, margin: 20 %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="right-side">
      <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
    </div>
  </div>
</div>


